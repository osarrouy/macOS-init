# Utiliser Homebrew bundle
# https://github.com/Homebrew/homebrew-bundle

# Taps

tap 'caskroom/cask'
tap 'caskroom/fonts'
tap 'caskroom/versions'
tap 'homebrew/bundle'
tap 'caskroom/drivers'

# Définir où placer les applications installées
cask_args appdir: '/Applications'

# Generic
brew 'mas'
